/* pages/Rlease/Rlease.wxss */
page{
  margin: 0rpx;
  padding: 0rpx;
}

.container{
   width: 100%;
   height: 100%;
   margin: 0rpx;
   padding: 0rpx;
}

.content_top{
  margin-top: 10rpx;
  width: 100%;
  height: 160rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.btn{
  width: 300rpx;
  height:80rpx;
  float: left;
  margin-left: 50rpx;
  margin-top: 40rpx;
  font-family: "仿宋";
  border: 1rpx solid #f1f1f1;
  border-radius: 60rpx;
  font-size:36rpx;
  line-height: 80rpx;
}

.btn::after{
  border: none;
}

.oMessage{
  width: 100%;
  margin: 0 auto;
}

label{
  float:left;
  margin-right:30rpx;
  margin-left: 20rpx;
  font-size:36rpx;
}

input{
   font-size:30rpx;
   height: 44rpx;
   line-height: 44rpx;
   margin-bottom: 70rpx;
}

.form1{
  border-bottom: 1rpx solid #f1f1f1;
  margin-top: 70rpx;
}

.form2{
  border-bottom: 1rpx solid #f1f1f1;
  margin-top: 10rpx;
  padding: 20rpx;
  position: relative;
  float: left;
  width: 100%;
}

.form2 text{
  font-size:32rpx;
  color:#808080;
}

.form2 image{
  margin-top: 20rpx;
  width: 140rpx;
  height: 140rpx;
  float: left;
}

.text{
  color: #cccccc;
  font-size: 28rpx;
  margin: 20rpx;
}

.submit_btn{
  width: 400rpx;
  height: 110rpx;
  line-height: 110rpx;
  margin-top: 50rpx;
  background: #2add9c;
  color: white;
  border-radius: 50rpx;
  clear: both;
}

.submit_btn::after{
  border: none;
}

.sendFile{
  width: 740rpx;

}

