<!--pages/fbnotice/fbnotice.wxml-->
<view class='container'>
  <view class='title'>
    <text>标题</text>
    <input bindinput="getNoticeTitle" value="{{noticeTitle}}" type='text' placeholder='请输入标题' ></input>
  </view>
  <view class='theContent'>
    <text>公告内容</text>
    <textarea bindinput="getNoticeContent" value="{{noticeContent}}" placeholder='请输入公告内容' ></textarea>
  </view>

  <button class='submit_btn' bindtap="sendNotice">发布</button>
</view>
