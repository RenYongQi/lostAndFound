/* pages/Me/Me.wxss */

.container{
  margin: 0px;
  padding: 0px;
  height: 100%;
  width: 100%;
}

.content-top{
  height: 440rpx;
  width: 100%;
  background: #2add9c;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
}

.userImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin:80rpx auto 0;
  display:block;
}

.userInfo{
  border-radius: 50%;
  margin:20rpx auto 0;
  display:block;
  color: white;
}

.userName{
   width: 400rpx;
   text-align: center;
}

.userCity{
  text-align: center;
  width: 400rpx;
}

.content-bottom{
  margin-top: 100rpx;
  padding-bottom: 40rpx;
  height: 100%;
}

.box{
  width: 560rpx;
  height: 400rpx;
  margin: 0 auto;
}

.navgata{
  width: 120rpx;
  height:120rpx;
  position: relative;
  float: left;
  margin: 0 0rpx 100rpx 60rpx;
  
}
.box image{
  width: 100rpx;
  height: 100rpx;
  align-items: center;
  margin: 20rpx auto;
}

.box text{
  color: rgb(192, 187, 187);
  font-size: 30rpx;
  position: absolute;
  width: 120rpx;
  left: -10rpx;
  top: 120rpx;
}


