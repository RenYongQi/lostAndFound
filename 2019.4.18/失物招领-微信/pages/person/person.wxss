/* pages/person/person.wxss */

page label{
  padding: 0;
  margin: 0;
}

.container{
  margin: 0px;
  padding: 0px;
  height: 100%;
  width: 100%;
}

.content-top{
  height: 440rpx;
  width: 100%;
  background: #2add9c;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
}

.userImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin:80rpx auto 0;
  display:block;
}

.userInfo{
  border-radius: 50%;
  margin:20rpx auto 0;
  display:block;
  color: white;
}

.userName{
   width: 400rpx;
   text-align: center;
}

.userCity{
  text-align: center;
  width: 400rpx;
}

.content{
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
  font-family: "宋体";
  display: table-cell;
  vertical-align: middle;

}

.content label{
  float:left;
  margin-right:30rpx;
  margin-left: 20rpx;
  font-size:34rpx;
  color: #6b6d6c;
  line-height: 40rpx;
  margin-top: 40rpx;
}

.content input{
   font-size:32rpx;
   height: 44rpx;
   color: #999999;
   margin-top: 38rpx;
   line-height: 44rpx;
}

.content1{
  margin-top: 40rpx;
  border-top: 1rpx solid #f1f1f1;
}

.submit_btn{
  width: 400rpx;
  height: 110rpx;
  line-height: 110rpx;
  margin-top: 150rpx;
  background: #2add9c;
  color: white;
  border-radius: 50rpx;
  clear: both;
}

.submit_btn::after{
  border: none;
}