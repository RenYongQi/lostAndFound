  transform:skew(5deg,20deg);
   
}
.active{
  transform:none;
 transition: transform 1s;
}

.content_msg{
  width: 100%;
  background: white;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #e4e0e0;
  overflow: hidden;
  padding-bottom: 20rpx;
  position: relative;
}


.userImg{
  float: left;
}

.userImg image{
  margin-top: 20rpx;
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
}

.userName{
  float: left;
  margin-top: 20rpx;
