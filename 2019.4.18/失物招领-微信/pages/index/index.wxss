/* pages/index/index.wxss */

page{
  padding: 0rpx;
  margin: 0rpx;
}

.container{
  padding: 0rpx;
  margin: 0rpx;
  height: 100%;
  width: 100%;
}

.serach{
  background: #f1f1f1;
  height: 80rpx;
  width: 715rpx;
  padding: 20rpx;
  position: relative;
}

.serach image{
  width: 60rpx;
  height: 60rpx;
  float: left;
  position: absolute;
  top: 31rpx;
  left: 30rpx;
  z-index: 2;
}

.serach input{
  float: left;
  background: white;
  height: 80rpx;
  border-radius: 10rpx;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
}

.content{
  height: 1000rpx;
  width: 700rpx;
  margin: 30rpx auto;
  clear: both;
}

.lunBo{
  margin: 20rpx auto;
  width: 700rpx;
  height: 350rpx;
}


.img{
  width: 700rpx;
  height: 350rpx;
  border-radius: 8rpx;
  opacity: .8;
